{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "watch:css": "postcss src/css/app.css -o dist/css/app.css -w",
    "watch:js": "rollup -c -w",
    "build:css": "postcss src/css/app.css -o dist/css/app.css",
    "build:js": "rollup -c",
    "dev": "npm-run-all -p watch:css watch:js",
    "build": "npm-run-all -p build:css build:js",
    "clean": "rm -rf dist/*"
  },
  "repository": "https://github.com/dangvanthanh/web-boilerplate.git",
  "author": "Dang Van Thanh <dangvanthanh@dangthanh.org>",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "cssnano": "^3.10.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^3.2.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "postcss-nested": "^1.0.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^3.2.2",
    "tachyons": "^4.7.1"
  }
}
